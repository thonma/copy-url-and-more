{
  "manifest_version": 2,
  "version": "2.2",
  "name": "Copy URL in Your Format",
  "short_name": "Copy URL in Your Format",
  "description": "任意のフォーマットでページタイトルとURLをコピーできます。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"]
}
