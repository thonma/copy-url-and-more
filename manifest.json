{
  "manifest_version": 3,
  "version": "2.3",
  "name": "Copy URL in Your Format",
  "short_name": "Copy URL in Your Format",
  "description": "任意のフォーマットでページタイトルとURLをコピーできます。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}